{{> admin/thisheader}}

                <!-- Top Bar End -->

                <div class="page-content-wrapper ">

                    <div class="container-fluid">

                        <div class="row">
                            <div class="col-sm-12">
                                <div class="float-right page-breadcrumb">

                                </div>
                                <h5 class="page-title">News</h5>
                            </div>
                        </div>
                        <!-- end row -->

                        <div class="row">
                            <div class="col-6">
                                <div class="card m-b-30">
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table table-striped mb-0">
                                                <thead>
                                                    <tr>
                                                        <th>Title</th>
                                                        <th>Description</th>
                                                        <th>Copmany</th>
                                                        <th>Action</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    {{#each data}}
                                                        <tr>
                                                            <td>{{title}}</td>
                                                            <td>{{description}}</td>
                                                            <td>{{company}}</td>
                                                            <td> <a href="{{link}}" class="btn btn-danger">
                                                                    Delete
                                                                </a>
                                                            </td>
                                                    </tr>
                                                    {{/each}}
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="col-6">
                                <form method="POST">
                                    <div class="card m-b-30">
                                    <div class="card-body">

                                        <h4 class="mt-0 header-title">New Subject</h4>
                                        <div class="form-group row">
                                                <label class="col-sm-2 col-form-label">Title</label>
                                                <div class="col-sm-10">
                                                    <input name="newsTitle" class="form-control" type="text"
                                                        placeholder="Title of News">
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                    <label class="col-sm-2 col-form-label">Description</label>
                                                    <div class="col-sm-10">
                                                        <input name="newsDescription" class="form-control" type="text"
                                                            placeholder="Description of News">
                                                    </div>
                                                </div>

                                            <div class="form-group row">
                                                <label class="col-sm-2 col-form-label">Company</label>
                                                <div class="col-sm-10">
                                                    <input name="newsCompany" class="form-control" type="text"
                                                        placeholder="Which site?">
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                    <label class="col-sm-2 col-form-label">Link</label>
                                                    <div class="col-sm-10">
                                                        <input name="newsLink" class="form-control" type="text"
                                                            placeholder="Please, link it!">
                                                    </div>
                                                </div>
                                    </div>
                                </div>
                               
                                <div class="form-group m-b-0 float-right">
                                    <div>
                                        <button type="submit" class="btn btn-primary waves-effect waves-light">
                                            Submit
                                        </button>
                                        <button type="reset" class="btn btn-secondary waves-effect m-l-5">
                                            Cancel
                                        </button>
                                    </div>
                                </div>
                                </form>

                            </div> <!-- end col -->
                        </div> <!-- end row -->

                    </div><!-- container fluid -->

                </div> <!-- Page content Wrapper -->

            </div> <!-- content -->
{{> admin/thisfooter}}