{{> header}}

<link href="https://fonts.googleapis.com/css?family=Roboto:400,700&display=swap" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.17.1/themes/prism.min.css" rel="stylesheet" />


<body>
    {{> nav}}

    <section class="title">
        <div class="container">
            <div class="default-title">
                Currency API
            </div>
        </div>
    </section>
    <section class="container m1">
        <div class="card">
            <div class="card-titles">
                <ul id="tabs">
                    <li>
                        <a class="tab-link tab-active" data-tab="#tab-1">DESCRIPTION</a>
                    </li>
                    <li>
                        <a class="tab-link" data-tab="#tab-2">DETAILS</a>
                    </li>
                </ul>
            </div>
            <div class="card-container card-active" id="tab-1">
                <p>
                    Instantly display currency API in Azerbaijanian language.
                </p>
            </div>
            <div class="card-container" id="tab-2">
                <p>
                    There is not any special parametr.
                </p>
            </div>
        </div>
        <div class="api-title">
            ENDPOINTS
        </div>
        <div class="card">
            <a class="api-head">
                <div class="api-method get">GET</div>
                <div class="api-link">https://azpi.tech/currency/</div>
            </a>
            <div class="api-container">
                <div class="api-container-table">
                    <table>
                        <thead>
                            <tr>
                                <th>Head</th>
                                <th>Description</th>
                                <th>Type</th>
                                <th>Required</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>-</td>
                                <td>There is a categorization in the API. For categories, please check Details side.
                                </td>
                                <td>Text</td>
                                <td>-</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="api-title light-text">
                    ENDPOINTS
                </div>
                <div class="api-code request">
                    <a id="kopyala" class="api-copy"><i class="fas fa-copy"></i> Kopyala</a>
                    <pre><code class="language-json" id="request"></code></pre>
                </div>
                <div class="api-code response">
                    <a id="kopyala" class="api-copy"><i class="fas fa-copy"></i> Kopyala</a>
                    <pre><code id="response" class="language-json"></code></pre>
                </div>
            </div>
        </div>
    </section>
    </div>
    {{> footer}}

    <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.17.1/components/prism-core.min.js    "></script>
    <script
        src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.17.1/plugins/autoloader/prism-autoloader.min.js"></script>
    {{> hooter}}
    <script>
        var request = {
            "uri": "https://azpi.tech/currency",
        }
        var response = {
            message: "success",
            result: [
                {
                    valyuta: "1 ABŞ dolları",
                    kod: "usd",
                    kurs: "1.7000"
                },
                {
                    valyuta: "1 Avro",
                    kod: "eur",
                    kurs: "1.8926"
                },
                {
                    valyuta: "1 Avstraliya dolları",
                    kod: "aud",
                    kurs: "1.1682"
                },
                {
                    valyuta: "1 Argentina pesosu",
                    kod: "ars",
                    kurs: "0.0284"
                },
                {
                    valyuta: "1 Belarus rublu",
                    kod: "byn",
                    kurs: "0.8096"
                },
                []
            ]
        }
        document.getElementById("response").innerHTML = JSON.stringify(response, null, 2)
        document.getElementById("request").innerHTML = JSON.stringify(request, null, 2)
    </script>
</body>

</html>