{{> header}}

<link href="https://fonts.googleapis.com/css?family=Roboto:400,700&display=swap" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.17.1/themes/prism.min.css" rel="stylesheet" />


<body>
    {{> nav}}

    <section class="title">
        <div class="container">
            <div class="default-title">
                Oxu.az News API
            </div>
        </div>
    </section>
    <section class="container m1">
        <div class="card">
            <div class="card-titles">
                <ul id="tabs">
                    <li>
                        <a class="tab-link tab-active" data-tab="#tab-1">DESCRIPTION</a>
                    </li>
                    <li>
                        <a class="tab-link" data-tab="#tab-2">DETAILS</a>
                    </li>
                </ul>
            </div>
            <div class="card-container card-active" id="tab-1">
                <p>
                    The News API service that instantly displays daily shared news on the Oxu.az news platform.
                </p>
            </div>
            <div class="card-container" id="tab-2">
                <p>
                    There is a categorization in the API. Use absolute categorization.
                    <br />
                    <h4>Categories</h4>
                    <ul>
                        <li>Daily News: /last</li>
                        <li>Economy: /economy</li>
                        <li>Politics: /politics</li>
                        <li>Society: /society</li>
                        <li>Media: /media</li>
                        <li>War: /war</li>
                        <li>Sports: /sport</li>
                        <li>Culture: /culture</li>
                        <li>World: /world</li>
                        <li>Criminal: /criminal</li>
                    </ul>
                </p>
            </div>
        </div>
        <div class="api-title">
            ENDPOINTS
        </div>
        <div class="card">
            <a class="api-head">
                <div class="api-method get">GET</div>
                <div class="api-link">https://azpi.tech/oxu/</div>
            </a>
            <div class="api-container">
                <div class="api-container-table">
                    <table>
                        <thead>
                            <tr>
                                <th>Head</th>
                                <th>Description</th>
                                <th>Type</th>
                                <th>Required</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>category</td>
                                <td>There is a categorization in the API. For categories, please check Details side.
                                </td>
                                <td>Text</td>
                                <td><i class="fa fa-check" aria-hidden="true"></i></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="api-title light-text">
                    ENDPOINTS
                </div>
                <div class="api-code request">
                    <a id="kopyala" class="api-copy"><i class="fas fa-copy"></i> COPY</a>
                    <pre><code class="language-json" id="request"></code></pre>
                </div>
                <div class="api-code response">
                    <a id="kopyala" class="api-copy"><i class="fas fa-copy"></i> COPY</a>
                    <pre><code id="response" class="language-json"></code></pre>
                </div>
            </div>
        </div>
    </section>
    </div>
    {{> footer}}

    <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.17.1/components/prism-core.min.js    "></script>
    <script
        src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.17.1/plugins/autoloader/prism-autoloader.min.js"></script>
    {{> hooter}}
